<%= form_for([@restaurant, @restaurant.reviews.build]) do |f| %>
  <div class="field">
    <%= f.label :reviewer %><br />
    <%= f.text_field :reviewer %>
  </div>
<div class="field">
    <%= f.label :dish %><br />
    <%= f.text_field :dish %>
  </div>
  <div class="field">
    <%= f.label :review %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>